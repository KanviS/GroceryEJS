<%- include('./parts/header') %>
<div class="container">
<h1>Update Grocery List</h1>
    <br>
<form method="post" action="/update">
    <input type="hidden" id="id" name="id" value="<%= grocery.id %>">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= grocery.name %>" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="imgUrl">Image Url</label>
        <input type="text" class="form-control" id="imgUrl" value="<%= grocery.imgUrl %>" name="imgUrl" placeholder="Enter imgUrl">
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="text" class="form-control" id="quantity" value="<%= grocery.quantity %>" name="quantity" placeholder="Enter quantity">
    </div>
    <div class="form-group">
        <label for="cost">Cost</label>
        <input type="text" class="form-control" id="cost" value="<%= grocery.cost %>" name="cost" placeholder="Enter cost">
    </div>
    <button type="submit" class="btn btn-success" data-dismiss="modal">Update</button>
    <a type="button" href="/groceries" class="btn btn-default" data-dismiss="modal">Close</a>
</form>
</div>
<%- include('./parts/tail') %>
